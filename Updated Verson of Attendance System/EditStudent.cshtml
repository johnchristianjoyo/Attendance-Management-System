@page
@model EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="text-center mb-4">
    <h1 class="display-4">Edit Student</h1>
    <p class="lead">Update student information</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Student.Id" />

            <div class="card" style="border: 1px solid #dee2e6;">
                <div class="card-header" style="background-color: white; border-bottom: 1px solid #dee2e6;">
                    <h3 style="font-weight: normal;">Student Information</h3>
                </div>
                <div class="card-body" style="background-color: white;">
                    <div class="mb-3">
                        <label for="FullName" class="form-label">Full Name</label>
                        <input asp-for="Student.FullName" class="form-control" required />
                        <span asp-validation-for="Student.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Section" class="form-label">Section</label>
                        <input asp-for="Student.Section" class="form-control" required />
                        <span asp-validation-for="Student.Section" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="StudentId" class="form-label">Student ID</label>
                        <input asp-for="Student.StudentId" class="form-control" required />
                        <span asp-validation-for="Student.StudentId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn" style="background-color: white; border: 1px solid #dee2e6; color: black;">Save Changes</button>
                        <a href="/Attendances" class="btn" style="background-color: white; border: 1px solid #dee2e6; color: black;">Cancel</a>
                    </div>
                </div>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert mt-3" role="alert" style="background-color: white; border: 1px solid #dee2e6; color: green;">
                @TempData["Message"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert mt-3" role="alert" style="background-color: white; border: 1px solid #dee2e6; color: red;">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
